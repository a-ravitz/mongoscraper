
<div class="background"></div>

<div class="container">
{{#each scraper}}

<div class="row p-3">
 <div class="card border-dark mb-3" style="max-width: 1200px" data-id={{this.id}}>  
     <div class="card-header">
    <h3 class="title">{{this.title}}</h3>
  </div>
  <div class="card-body d-flex">
    <div><h5 class="card-title summary">{{this.summary}}</h5>
    <button class="save" data-id={{this.id}}>Save This Article</button>
</div>
    
    <a href={{this.link}} class="link"><img src={{this.image}} class="rounded float-right size image" alt="..."></a>
    
  </div>
</div>

{{/each}}
</div>
